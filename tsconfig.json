{
  "compilerOptions": {
    // 1. Correct the Root Directory to the current folder
    "rootDir": "./",
    "outDir": "./dist",

    // 2. Node.js specific settings
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    
    // 3. Libraries needed for backend
    "lib": ["es2022"],
    
    // 4. Interop settings
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    
    // 5. Allow JSON imports (often needed)
    "resolveJsonModule": true
  },
  // 6. Explicitly tell TS to look at files in the root
  "include": [
    "index.ts",
    "prisma.config.ts",
    "generated/**/*" 
  ],
  // 7. IMPORTANT: Ignore the 'client' folder so backend TS doesn't fight with Frontend TS
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ]
}